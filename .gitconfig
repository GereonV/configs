[user]
	email = 72784429+GereonV@users.noreply.github.com
	name = Gereon V
	signingKey = ~/.ssh/id_ed25519.pub
[core]
	editor = nvim
[alias]
	egc = config --global --edit
	l = log --all --oneline --graph
	fa = fetch --all --tags --prune
	pr = pull --rebase
	pushf = push --force-with-lease
	co = checkout
	s = status -s
	aa = add --all
	ci = commit
	ca = commit --all
	ae = commit --amend
	ane = commit --amend --no-edit
	wta = worktree add
	wtr = worktree remove
	wtl = worktree list
[init]
	defaultBranch = master
[merge]
	tool = nvimdiff
[rebase]
	updateRefs = true
	autosquash = true
[gpg]
	format = ssh
[commit]
	gpgsign = true

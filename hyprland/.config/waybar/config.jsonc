			// "headset": "Óπô ",
			// "headset-muted": "Û∞ãê ",
			"portable": "ÔÇï ",
			"portable-muted": "Ó¥ó ",
			"car": "ÔÜπ",
			"phone": "ÔÇï ",
			"phone-muted": "Ó¥ó "
		}
	},
	"clock": {
		"interval": 1,
		"format": "<tt>{:%A %F %T %Z}</tt>",
		"tooltip-format": "<tt>{calendar}</tt>",
		"calendar": {
			"mode-mon-col": 3,
			"weeks-pos": "left",
			"format": {
				"months": "<b>{}</b>",
				"weeks": "<span color='#99ffdd'><b>{}</b></span>", // green-cyan
				"weekdays": "<span color='#ffcc66'><b>{}</b></span>", // yellow

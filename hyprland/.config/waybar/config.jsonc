			"class<discord>": "Ôáø "
		},
		"window-rewrite-default": "ÔÅô ",
		"format-window-separator": " ",
		"move-to-monitor": true
	},
	"hyprland/window": {
		"separate-outputs": true,
		"icon": true
	},

	"temperature": {
		"hwmon-path": "/sys/devices/pci0000:00/0000:00:18.3/hwmon/hwmon1/temp1_input",
		"warning-threshold": 65,
		"critical-threshold": 85,
		"tooltip": false
	},
	"cpu": {
		"interval": 2,
		"format": "{usage}% @ {avg_frequency} GHz {icon0}{icon1}{icon2}{icon3}{icon4}{icon5}{icon6}{icon7}{icon8}{icon9}{icon10}{icon11}",
		"format-icons": [
			"<span color='#69ff94'>‚ñÅ</span>", // green
			"<span color='#2aa9ff'>‚ñÇ</span>", // blue
			"<span color='#f8f8f2'>‚ñÉ</span>", // white
			"<span color='#f8f8f2'>‚ñÑ</span>", // white
			"<span color='#ffffa5'>‚ñÖ</span>", // yellow
			"<span color='#ffffa5'>‚ñÜ</span>", // yellow
			"<span color='#ff9977'>‚ñá</span>", // orange
			"<span color='#dd532e'>‚ñà</span>"  // red
		]
	},
	"memory": {
		"interval": 2,
		"format": "{percentage}% ({swapPercentage}%)",
		"states": {
			"warning": 50,
			"critical": 80
		},
		"tooltip-format": "RAM: {used} GiB / {total} GiB\nSwap: {swapUsed} GiB / {swapTotal} GiB"
	},
	"network": {
		"interval": 5,
		"family": "ipv4_6",
		"format-ethernet": "ÓΩÑ  {bandwidthTotalBytes}",
		"format-wifi": "Ôá´  {essid} ({signalStrength}%)",

{
	"position": "top",
	"modules-left": [
		"hyprland/workspaces",
		"hyprland/window"
	],
	"modules-center": [
		"temperature",
		"cpu",
		"memory",
		"network",
		"disk",
		"bluetooth"
	],
	"modules-right": [
		"systemd-failed-units",
		"privacy",
		"mpris",
		"pulseaudio/slider",
		"pulseaudio",
		"tray",
		"clock"
	],
	"margin": 6,
	"spacing": 20,
	"reload_style_on_change": true,

	"hyprland/workspaces": {
		"format": "{name} {windows}",
		"format-window-separator": "",
		"show-special": true,
		"special-visible-only": true,
		// "workspace-taskbar": {
		// 	"enable": true,
		// 	"update-active-window": true
		// },
		"window-rewrite": {
			"title<.*youtube.*>": "ÔÖ™ ",
